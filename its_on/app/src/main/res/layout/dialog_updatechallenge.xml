<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_updateDialogChlgTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Reading Challenge"
            android:textColor="#4fa5d5"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_updateDialogChlgDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_updateDialogChlgTitle"
            android:textColor="#CDCDBB"
            android:textStyle="italic"
            android:textSize="12dp"
            android:text="Read Once Everyday" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_updateDialogMsg"
        android:hint="Speak about your triumpth!"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center"
        android:background="@drawable/border">

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_alignParentLeft="true"
            android:background="#4fa5d5"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/btn_updateDialogCommit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#4fa5d5"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_updateDialogCancel" />

    </RelativeLayout>


</LinearLayout>