<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4fa5d5"
    tools:context="flyapp.its_on.StartScreen">

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_itson"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="strive for greatness \n       with friends"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="18sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#FFA319"
        android:textStyle="bold"
        android:text="Register"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:onClick="SwitchToRegister"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#5CE62E"
        android:onClick="SwitchToSignIn"
        android:textStyle="bold"
        android:text="Sign In"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        />


</LinearLayout>
