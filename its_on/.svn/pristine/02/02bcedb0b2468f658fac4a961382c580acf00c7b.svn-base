<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_profileChlgIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_book" />

        <TextView
            android:id="@+id/tv_profChlgTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileChlgIcon"
            android:paddingTop="12dp"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_profChlgDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_profChlgTitle"
            android:layout_alignLeft="@+id/tv_profChlgTitle"
            android:textSize="12dp"
            android:text="Description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/btn_update"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Update"
                android:focusable="false"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="#4fa5d5"
                android:textColor="#ffffff"
                />

        </LinearLayout>

    </RelativeLayout>
